extends layout

block content
  a(href='/') home
    
  form(method="post" action="/entries/edit/#{entry._id}")
        input(
          type='text'
          name='title'
          placeholder='#{entry.title}'
          required
        )
        br
        textarea(
          name='content'
          placeholder='#{entry.content}'
          rows='4' 
          cols='50'
          required
        )
        br
        input(type="submit", value="submit")